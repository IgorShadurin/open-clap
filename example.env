# Local SQLite database file path
SQLITE_DB_PATH=./data/codex-tasks.sqlite

# Optional Prisma-style database URL (SQLite)
DATABASE_URL="file:./data/codex-tasks.sqlite"

# Generic app/server runtime examples
NODE_ENV=development
PORT=3000

# Dynamic settings (SETTINGS_<key>=<value>)
# These values override in-code defaults.
# DB values still have highest priority over these env values.
SETTINGS_codex_command_template=codex run --cwd "{{contextPath}}" --model "{{model}}" --reasoning "{{reasoning}}" "{{message}}"
SETTINGS_task_message_template=Context:\n{{context}}\n\nTask:\n{{task}}
SETTINGS_task_message_template_with_history=History:\n{{history}}\n\nContext:\n{{context}}\n\nTask:\n{{task}}
SETTINGS_daemon_max_parallel_tasks=3
SETTINGS_codex_usage_auth_file=~/.codex/auth.json
SETTINGS_codex_usage_proxy_enabled=false
SETTINGS_codex_usage_proxy_url=http://username:password@proxy-host:proxy-port
SETTINGS_default_project_base_path=/Users/me/workspace
SETTINGS_project_path_sort_mode=modified
